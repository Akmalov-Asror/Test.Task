<div class="d-flex justify-content-center">
    <form asp-action="SignIn" class="mb-3 w-25" method="post">
        <div class="form-group">
            <label for="UserName" class="form-label">UserName</label>
            <input class="form-control" type="text" id="UserName" name="UserName" placeholder="UserName" />
        </div>
        <div class="form-group">
            <label for="Password" class="form-label">Password</label>
            <input class="form-control" type="text" id="Password" name="Password" placeholder="Password" />
        </div>
        <input class="form-control btn-primary" type="submit" value="Sign in" />
        <a asp-controller="Register" asp-action="SignUp" class="form-control btn-primary mt-1">Sign up</a>
    </form>
</div>